{
  "name": "react-erp-ui",
  "version": "0.1.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "classnames": "^2.2.6",
    "exceljs": "^3.7.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-jss": "^8.6.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf lib && cross-env NODE_ENV=production babel src --out-dir lib --ignore src/setupTests.js,src/**/*.stories.js,src/**/*.test.js && copyfiles -u 1 src/**/*.d.ts lib",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "rm -rf docs/storybook && build-storybook -s public -o docs/storybook",
    "build-docs": "rm -rf docs/docs && typedoc --includeDeclarations --excludeExternals --ignoreCompilerErrors --out docs/docs --readme README.md src/",
    "typescript": "tsc"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@storybook/addon-actions": "^5.2.3",
    "@storybook/addon-links": "^5.2.3",
    "@storybook/addons": "^5.2.3",
    "@storybook/react": "^5.2.3",
    "@types/react": "^16.9.16",
    "copyfiles": "^2.1.1",
    "cross-env": "^6.0.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "node-sass": "^4.13.1",
    "react-scripts": "^3.3.0",
    "typedoc": "^0.15.4",
    "typescript": "^3.7.3"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
